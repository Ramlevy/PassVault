<Window x:Class="PassVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassVault"
        mc:Ignorable="d"
        Title="PassVault" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="21,25,0,0" Text="Cryptographically Secure Pseudo-Random Number Generator" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Generate" HorizontalAlignment="Left" Margin="396,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.025,-0.647" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="513,25,0,0" Text="The number is:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="RandomNumber" HorizontalAlignment="Left" Margin="651,28,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.558,-0.12" Width="44"/>
        <Button Content="Create Key" HorizontalAlignment="Left" Margin="43,141,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Get Key" HorizontalAlignment="Left" Margin="240,141,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.368,-0.754" Click="Button_Click_2"/>
        <Button Content="Delete Key" HorizontalAlignment="Left" Margin="422,141,0,0" VerticalAlignment="Top" Click="Button_Click_3"/>
        <TextBox x:Name="KeyOutput" HorizontalAlignment="Left" Margin="97,205,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="616" Height="187" HorizontalScrollBarVisibility="Visible"/>
        <Button Content="Get the Public Key" HorizontalAlignment="Left" Margin="597,141,0,0" VerticalAlignment="Top" Click="Button_Click_4"/>

    </Grid>
</Window>
